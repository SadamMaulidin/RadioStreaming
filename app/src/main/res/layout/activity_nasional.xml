<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NasionalActivity"
    android:background="@drawable/nationalorinter">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:src="@drawable/radionasional"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp" />

    <Button
        android:id="@+id/btnRadio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnRadio3"
        android:layout_alignTop="@+id/btnRadio2"
        android:background="@drawable/radio1"
        android:layout_alignLeft="@+id/btnRadio3" />

    <Button
        android:id="@+id/btnRadio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnRadio4"
        android:layout_marginTop="125dp"
        android:background="@drawable/radio2"
        android:layout_alignLeft="@+id/btnRadio4" />

    <Button
        android:id="@+id/btnRadio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnRadio4"
        android:layout_marginStart="47dp"
        android:background="@drawable/radio3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp" />

    <Button
        android:id="@+id/btnRadio4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="127dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/radio4"
        android:layout_marginRight="38dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>